<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/analyzedInstructionsStepLayoutStepNumber"
        style="@style/Medium16White"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/blue_oval"
        android:layout_marginTop="24dp"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/analyzedInstructionsStepLayoutIngredientsFlexbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerDrawable="@drawable/flexbox_divider"
        app:showDivider="middle"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:alignContent="center"
        app:alignItems="center"
        android:layout_marginTop="24dp"/>

    <View
        android:id="@+id/analyzedInstructionsStepLayoutFlexboxesDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black6"
        android:layout_marginTop="16dp"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/analyzedInstructionsStepLayoutEquipmentFlexbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerDrawable="@drawable/flexbox_divider"
        app:showDivider="middle"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:alignContent="center"
        app:alignItems="center"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/analyzedInstructionsStepLayoutStepText"
        style="@style/Regular18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

</LinearLayout>